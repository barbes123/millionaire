import { OptionCard } from './components/OptionCard';
import { Users, User, Volume2, VolumeX, Trophy, ArrowRight, ArrowLeft, RefreshCw, XCircle, LayoutGrid, AlertCircle, Play, Globe, BarChart3, Phone, Scissors, ShieldCheck, Timer } from 'lucide-react';

interface QuestionHistory {
  wrong: string[];
  isCorrect: boolean;
  attempts: number;
  fiftyFiftyUsedForThis: string[]; // Options hidden by 50/50
}

